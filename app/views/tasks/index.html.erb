<h1>My tasks 📝</h1>
<br>

<div class="container">
  <ul class="list-inline"> <% @tasks.each do |task| %>
    <li> 
      <% if task.completed %> 
        <input type="checkbox" checked>
       <% else %>
        <input type="checkbox">
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "🗑️",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      <% end %> 
      </li> </ul> 
  
    <br>
    <%= link_to(tasks_new_path) do %>
    <button type="button" class="btn btn-light">➕ Add a new task</button>
    <% end %>

</div>